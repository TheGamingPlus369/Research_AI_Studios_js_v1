<%- include('partials/header') %>

<main>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-lg-6 fade-in-element">
                    <h1 class="display-4 fw-bold lh-1 mb-4 gradient-text">From Blank Page to Brilliant Paper.</h1>
                    <p class="lead">AI Research Studio is your personal AI partner that organizes sources, analyzes data, and accelerates your writing, turning months of work into weeks.</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a href="/signup" class="btn btn-primary btn-lg px-4 me-md-2">Start for Free</a>
                    </div>
                </div>
                <div class="col-lg-6 fade-in-element">
                    <img src="/images/hero-brain.png" class="d-block mx-lg-auto img-fluid hero-image" alt="Abstract AI Brain">
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container">
            <div class="text-center mb-5 fade-in-element">
                <h2 class="fw-bold">A Smarter Way to Research</h2>
                <p class="lead text-muted">Everything you need, all in one intelligent workspace.</p>
            </div>
            <div class="row g-4">
                <!-- Feature 1 -->
                <div class="col-lg-4 d-flex align-items-stretch fade-in-element">
                    <div class="card text-center shadow-sm h-100 card-feature">
                        <div class="card-body">
                            <img src="/images/icon-literature.png" alt="Literature Icon" class="feature-icon mb-3">
                            <h5 class="card-title fw-bold">Smart Literature Hub</h5>
                            <p class="card-text text-muted">Upload PDFs and let our AI extract key findings, compare methodologies, and uncover hidden research gaps for you.</p>
                        </div>
                    </div>
                </div>
                <!-- Feature 2 -->
                <div class="col-lg-4 d-flex align-items-stretch fade-in-element">
                    <div class="card text-center shadow-sm h-100 card-feature">
                        <div class="card-body">
                            <img src="/images/icon-data.png" alt="Data Icon" class="feature-icon mb-3">
                            <h5 class="card-title fw-bold">Data & Methodology</h5>
                            <p class="card-text text-muted">From designing surveys to writing analysis scripts in Python, get expert AI guidance at every step of your research design.</p>
                        </div>
                    </div>
                </div>
                <!-- Feature 3 -->
                <div class="col-lg-4 d-flex align-items-stretch fade-in-element">
                    <div class="card text-center shadow-sm h-100 card-feature">
                        <div class="card-body">
                            <img src="/images/icon-writing.png" alt="Writing Icon" class="feature-icon mb-3">
                            <h5 class="card-title fw-bold">AI Writing Co-Pilot</h5>
                            <p class="card-text text-muted">Beat writer's block. Generate drafts, paraphrase complex ideas, and automatically insert citations from your library as you write.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>

<%- include('partials/footer') %>