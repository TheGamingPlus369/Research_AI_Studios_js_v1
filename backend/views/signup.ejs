<%- include('partials/header') %>

<div class="form-container">
    <div class="card shadow-lg login-card">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                
                <h1 class="h3 mb-3 fw-bold">Create an Account</h1>
                <p class="text-muted">Start your research journey with us.</p>
            </div>
            
            <a href="/auth/google" class="btn btn-outline-secondary w-100 btn-google">
                <img src="/images/google.png" alt="Google icon" width="22" height="22" class="me-2">
                Sign up with Google
            </a>

            <div class="divider my-4">OR</div>

            <form>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label for="floatingPassword">Password</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingConfirmPassword" placeholder="Confirm Password" required>
                    <label for="floatingConfirmPassword">Confirm Password</label>
                </div>

                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="agree" id="terms" required>
                    <label class="form-check-label" for="terms">
                      I agree to the <a href="/terms">terms and conditions</a>.
                    </label>
                </div>

                <button class="w-100 btn btn-lg btn-primary" type="submit">Create Account</button>
            </form>

            <div class="text-center mt-4">
                <p class="text-muted">Already have an account? <a href="/login" class="text-decoration-none fw-medium">Sign in</a></p>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>